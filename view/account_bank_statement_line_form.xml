<form>
    <group id="general" col="6" colspan="4">
        <label name="date"/>
        <field name="date" widget="date"/>
        <label name="company"/>
        <field name="company"/>
        <label name="journal"/>
        <field name="journal"/>
        <label name="statement_currency"/>
        <field name="statement_currency"/>
        <newline/>
        <label name="description"/>
        <field name="description" colspan="5"/>
        <label name="notes"/>
        <field name="notes" colspan="5"/>
    </group>
    <group id="amounts" col="6" colspan="4">
        <label name="company_amount"/>
        <field name="company_amount"/>
        <label name="amount"/>
        <field name="amount"/>
        <label name="moves_amount"/>
        <field name="moves_amount"/>
    </group>
    <group id="status" colspan="4" col="-1">
        <label name="state"/>
        <field name="state"/>
        <button name="cancel" string="Cancel"/>
        <button name="draft" string="Draft"/>
        <button name="confirm" string="Confirm"/>
        <button name="post" string="Post"/>
    </group>
</form>
